generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Content {
  id             String      @id @default(cuid())
  message        String
  translatedText String
  isLearned      Boolean     @default(false)
  picture        String?
  Dictionary     Dictionary? @relation(fields: [dictionaryId], references: [id])
  dictionaryId   String
  author         Profile?    @relation(fields: [authorId], references: [id])
  authorId       String
}

model Dictionary {
  id        String    @id @default(cuid())
  title     String
  content   String
  published Boolean   @default(false)
  author    Profile?  @relation(fields: [authorId], references: [id])
  authorId  String
  contents  Content[]
}

model Profile {
  id             String       @id
  username       String?
  name           String
  avatar_url     String?
  email          String?
  country        String?
  nativeLanguage String?
  targetLanguage String?
  dictionarys    Dictionary[]
  Content        Content[]
}
